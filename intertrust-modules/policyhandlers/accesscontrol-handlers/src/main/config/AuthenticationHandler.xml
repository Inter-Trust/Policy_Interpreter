    <authnTypes>
        <authnType name="recognized">http://inter-trust.eu/security/authentication/recognized</authnType>
        <authnType name="advanced">http://inter-trust.eu/security/authentication/advanced</authnType>
        <authnType name="anonymous">http://inter-trust.eu/security/authentication/anonymous</authnType>
        <authnType name="certificate">http://inter-trust.eu/security/authentication/X509Certificate</authnType>
        <default>recognized</default>
    </authnTypes>
