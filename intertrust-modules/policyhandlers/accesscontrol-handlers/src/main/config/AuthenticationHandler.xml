<?xml version="1.0" encoding="UTF-8"?>
<authorizationHandlerConfig>
    <policyAction>Authentication</policyAction>
    <category>http://inter-trust.eu/security/accesscontrol</category>
    <type>http://inter-trust.eu/security/authentication</type>
    <functionality>http://inter-trust.eu/security/authentication</functionality>
    <targets>
        <target name="csa">http://inter-trust.eu/csa/vehicle/login</target>
        <target name="csa-request">http://inter-trust.eu/csa/central/csaentrypoint</target>
        <target name="voter_request">http://inter-trust.eu/evoting/votingentrypoint</target>
